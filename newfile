from flask import Flask, request, redirect, url_for
import boto3

app = Flask(__name__)

s3 = boto3.client('s3',
                  aws_access_key_id='AKIAZPDZRR7NDEYZ434T',
                  aws_secret_access_key='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',
                  region_name='us-east-1')
textract= boto3.client('textract',
                       aws_access_key_id='AKIAZPDZRR7NDEYZ434T',
                        aws_secret_access_key='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',
                        region_name='us-east-1')

@app.route('/', methods=['GET', 'POST'])
def upload_file():
    if request.method == 'POST':
        file = request.files['file']
        s3.upload_fileobj(file, '1009testbucket', file.filename)

        response = textract.start_document_text_detection(
            DocumentLocation={
                'S3Object': {
                    'Bucket': '1009testbucket', 'Name': file.filename
                }
            }
        )

        # Extract the JobId for future reference
        job_id = response['JobId']

        response = textract.get_document_text_detection(JobId=job_id)

        job_status = response['JobStatus']

        return redirect(url_for('upload_file'))

    return '''
    <!doctype html>
    <title>Upload a Document</title>
    <h1>Upload a Document</h1>
    <form method=post enctype=multipart/form-data>
      <input type=file name=file>
      <input type=submit value=Upload>
    </form>
    '''

if __name__ == '__main__':
    app.run(debug=True)
